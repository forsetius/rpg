{% block datePicker_widget -%}
<div class='input-group date' id='{{ id }}'>
	<span class="input-group-addon">
        <i class="fa fa-calendar"></i>
    </span>
        {{- block('form_widget_simple') -}}
</div>
<script type="text/javascript">
    $(function () {
        $('#{{ id }}').datetimepicker({
            locale: '{{ app.request.locale }}',
            format: '{{ easyadmin.field.type_options.format|default("YYYY-MM-DD") }}',
            sideBySide: false,
            collapse: true,
            useCurrent: true,
            showTodayButton: true,
            showClear: true,
            tooltips: {
                today: '{{ "app.ui.datetimepicker2.today"|trans }}',
                clear: '{{ "app.ui.datetimepicker2.clear"|trans }}',
                close: '{{ "app.ui.datetimepicker2.close"|trans }}',
                selectMonth: '{{ "app.ui.datetimepicker2.selectMonth"|trans }}',
                prevMonth: '{{ "app.ui.datetimepicker2.prevMonth"|trans }}',
                nextMonth: '{{ "app.ui.datetimepicker2.nextMonth"|trans }}',
                selectYear: '{{ "app.ui.datetimepicker2.selectYear"|trans }}',
                prevYear: '{{ "app.ui.datetimepicker2.prevYear"|trans }}',
                nextYear: '{{ "app.ui.datetimepicker2.nextYear"|trans }}',
                selectDecade: '{{ "app.ui.datetimepicker2.selectDecade"|trans }}',
                prevDecade: '{{ "app.ui.datetimepicker2.prevDecade"|trans }}',
                nextDecade: '{{ "app.ui.datetimepicker2.nextDecade"|trans }}',
                prevCentury: '{{ "app.ui.datetimepicker2.prevCentury"|trans }}',
                nextCentury: '{{ "app.ui.datetimepicker2.nextCentury"|trans }}'
            },
            icons: {
                time: 'fa fa-clock-o',
                date: 'fa fa-calendar',
                up: 'fa fa-chevron-up',
                down: 'fa fa-chevron-down',
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-calendar-check-o',
                clear: 'fa fa-eraser',
                close: 'fa fa-times'
            }
        });
    });
</script>
{%- endblock datePicker_widget %}